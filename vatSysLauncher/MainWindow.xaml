<Window x:Class="vatSysManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vatSysManager"
        mc:Ignorable="d"
        Title="vatSys Launcher" Height="450" Width="885"
        ResizeMode="NoResize">
    <Grid>
        <Image Source="/logo.jpg" Stretch="None" Margin="18,16,645,303"/>
        <Button x:Name="HomeButton" Content="Home" HorizontalAlignment="Left" Margin="24,126,0,0" VerticalAlignment="Top" Height="43" Width="198" Click="HomeButton_Click" IsEnabled="{Binding ButtonsEnabled}" FontSize="16" FontFamily="Terminus (TTF)" />
        <Button x:Name="ProfilesButton" Content="Profiles" HorizontalAlignment="Left" Margin="24,174,0,0" VerticalAlignment="Top" Height="43" Width="198" Click="ProfilesButton_Click" IsEnabled="{Binding ButtonsEnabled}" FontSize="16"  FontFamily="Terminus (TTF)" />
        <Button x:Name="PluginsButton" Content="Plugins" HorizontalAlignment="Left" Margin="24,222,0,0" VerticalAlignment="Top" Height="43" Width="198" Click="PluginsButton_Click" IsEnabled="{Binding ButtonsEnabled}" FontSize="16"  FontFamily="Terminus (TTF)" />
        <Button x:Name="SetupButton" Content="Setup" HorizontalAlignment="Left" Margin="24,270,0,0" VerticalAlignment="Top" Height="43" Width="198" Click="SetupButton_Click" IsEnabled="{Binding ButtonsEnabled}" FontSize="16"  FontFamily="Terminus (TTF)" />
        <Canvas x:Name="InitCheckCanvas" Margin="233,0,0,0" Visibility="{Binding InitCanvas, Mode=OneWay}">
            <TextBlock Canvas.Left="90" TextWrapping="Wrap" Text="You must close vatSys to continue." Canvas.Top="140" Width="450" VerticalAlignment="Top" HorizontalAlignment="Left" TextAlignment="Center" FontWeight="Bold" FontSize="20" FontFamily="Terminus (TTF)"/>
            <Button x:Name="CloseButton" Content="Close vatSys" Height="43" Width="600" Canvas.Left="10" Canvas.Top="175" Click="VatSysCloseButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#FFED8181" FontSize="16" FontFamily="Terminus (TTF)"/>
        </Canvas>
        <Canvas x:Name="SetupCanvas" Margin="233,0,0,0" Visibility="{Binding SetupCanvas, Mode=OneWay}">
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Setup" Canvas.Top="10" FontWeight="Bold" FontSize="20" FontFamily="Terminus (TTF)"/>
            <TextBox x:Name="BaseDirectoryTextBox" Text="{Binding BaseDirectory, Mode=OneWay}" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="71" Width="500" Height="26" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="13" FontFamily="Terminus (TTF)"/>
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Base Directory" Canvas.Top="50" FontSize="13" FontFamily="Terminus (TTF)"/>
            <TextBox x:Name="ProfileDirectoryTextBox" Text="{Binding ProfileDirectory, Mode=OneWay}" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="134" Width="500" Height="26" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="13" FontFamily="Terminus (TTF)"/>
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Profile Directory" Canvas.Top="113" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="13" FontFamily="Terminus (TTF)"/>
            <Button Content="Change" Canvas.Left="530" Canvas.Top="71" Height="26" Width="80" Click="BaseDirectoryButton_Click" FontSize="13" FontFamily="Terminus (TTF)"/>
            <Button Content="Change" Canvas.Left="530" Canvas.Top="134" Height="26" Width="80" HorizontalAlignment="Center" VerticalAlignment="Top" Click="ProfileDirectoryButton_Click" FontSize="13" FontFamily="Terminus (TTF)"/>
            <TextBlock Canvas.Left="30" TextWrapping="Wrap" Text="Include Development Plugins" Canvas.Top="180" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="13" FontFamily="Terminus (TTF)"/>
            <CheckBox x:Name="DevelopmentCheckBox" IsChecked="{Binding IncludeDevelopment, Mode=OneTime}" Canvas.Left="10" Canvas.Top="179" Checked="DevelopmentCheckBox_Checked" Unchecked="DevelopmentCheckBox_Unchecked" />
        </Canvas>
        <Canvas x:Name="HomeCanvas" Margin="233,0,0,0" Visibility="{Binding HomeCanvas, Mode=OneWay}">
            <TextBlock x:Name="WaitTextBlock" Visibility="{Binding WaitText}" Canvas.Left="125" TextWrapping="Wrap" Text="Checking for updates..." Canvas.Top="185" Width="387" VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center" FontWeight="Bold" FontSize="20" FontFamily="Terminus (TTF)"/>
            <Button x:Name="LaunchButton" Visibility="{Binding LaunchButton}" Content="Launch vatSys" Height="43" Width="600" Canvas.Left="10" Canvas.Top="175" Click="VatSysLaunchButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#FFA2ED81" FontWeight="Bold" FontSize="16"  FontFamily="Terminus (TTF)" />
            <TextBlock x:Name="UpdateText" Canvas.Left="455" TextWrapping="Wrap" Text="{Binding UpdatesText}" TextAlignment="Right" Canvas.Top="225" HorizontalAlignment="Left" VerticalAlignment="Center" Visibility="{Binding UpdatesAvailable}"  FontFamily="Terminus (TTF)"/>
        </Canvas>
        <Canvas x:Name="ProfilesCanvas" Margin="233,0,0,0" Visibility="{Binding ProfilesCanvas, Mode=OneWay}">
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Profiles" Canvas.Top="10" Width="387" TextAlignment="Left" FontWeight="Bold" FontSize="20" FontFamily="Terminus (TTF)"/>
            <ListBox Name="ProfilesList" ItemsSource="{Binding ProfilesList, Mode=OneWay}" ScrollViewer.VerticalScrollBarVisibility="Visible" HorizontalAlignment="Left" Canvas.Top="42" VerticalAlignment="Center" Height="356" RenderTransformOrigin="1.591,0.524" Width="600" Canvas.Left="10" FontSize="13" FontFamily="Terminus (TTF)">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2" Width="560">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition Width="60" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Title}" />
                            <TextBlock Text="{Binding LocalVersion}" Grid.Column="1" />
                            <TextBlock Text="{Binding CurrentVersion}" Grid.Column="2" />
                            <Button x:Name="Install" Visibility="Collapsed" Grid.Column="4" Content="Install" Click="UpdaterButton_Click" Tag="{Binding InstallCommand}" />
                            <Button x:Name="Update" Visibility="Collapsed" Grid.Column="3" Content="Update" Click="UpdaterButton_Click" Tag="{Binding UpdateCommand}" />
                            <Button x:Name="Delete" Visibility="Collapsed" Grid.Column="4" Content="Delete" Click="UpdaterButton_Click" Tag="{Binding DeleteCommand}" />
                        </Grid>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding UpdateAvailable}" Value="True">
                                <Setter TargetName="Update" Property="Visibility" Value="Visible" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Installed}" Value="True">
                                <Setter TargetName="Delete" Property="Visibility" Value="Visible" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Installed}" Value="False">
                                <Setter TargetName="Install" Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock x:Name="ProfilesLoading" Visibility="{Binding ProfilesLoading}" Canvas.Left="420" TextWrapping="Wrap" Text="Loading, please wait." Canvas.Top="21" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFFF0101" FontFamily="Terminus (TTF)" />
        </Canvas>
        <Canvas x:Name="PluginsCanvas" Margin="233,0,0,0" Visibility="{Binding PluginsCanvas, Mode=OneWay}">
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Plugins" Canvas.Top="10" Width="387" TextAlignment="Left" FontWeight="Bold" FontSize="20" FontFamily="Terminus (TTF)"/>
            <ListBox Name="PluginsList" ItemsSource="{Binding PluginsList, Mode=OneWay}" ScrollViewer.VerticalScrollBarVisibility="Visible" HorizontalAlignment="Center" Canvas.Top="118" VerticalAlignment="Top" Height="280" Width="600" RenderTransformOrigin="1.591,0.524" Canvas.Left="10" FontSize="13" FontFamily="Terminus (TTF)">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2" Width="560">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="95" />
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="70" />
                                <ColumnDefinition Width="70" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Name}" />
                            <TextBlock Text="{Binding Author}" Grid.Column="1" />
                            <TextBlock Text="{Binding Profile}" Grid.Column="2" />
                            <!--<TextBlock Text="{Binding LocalVersion}" Grid.Column="2" />-->
                            <TextBlock Text="{Binding CurrentVersion}" Grid.Column="3" />
                            <Button x:Name="Update" Visibility="Collapsed" Grid.Column="4" Content="Update" Click="UpdaterButton_Click" Tag="{Binding UpdateCommand}" />
                            <Button x:Name="Delete" Grid.Column="5" Content="Delete" Click="UpdaterButton_Click" Tag="{Binding DeleteCommand}" />
                        </Grid>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding UpdateAvailable}" Value="True">
                                <Setter TargetName="Update" Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock x:Name="PluginsLoading" Visibility="{Binding PluginsLoading}" Canvas.Left="470" TextWrapping="Wrap" Text="Loading, please wait." Canvas.Top="21" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="#FFFF0101" FontSize="13" FontFamily="Terminus (TTF)" />
            <ComboBox x:Name="PluginsOptionsComboBox" ItemsSource="{Binding PluginsAvailable, Mode=OneWay}" Canvas.Left="10" Canvas.Top="63" Width="240" Height="22" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="13" FontFamily="Terminus (TTF)"/>
            <Button Content="Install" Canvas.Left="490" Canvas.Top="63" Height="22" Width="120" HorizontalAlignment="Center" VerticalAlignment="Center" Click="PluginInstallButton_Click" FontSize="13" FontFamily="Terminus (TTF)"/>
            <ComboBox x:Name="PluginsLocationsComboBox" ItemsSource="{Binding PluginsLocations, Mode=OneWay}" Canvas.Left="270" Canvas.Top="63" Height="22" Width="200" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="13" FontFamily="Terminus (TTF)"/>
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Install plugin" Canvas.Top="42" RenderTransformOrigin="-0.18,0.353" FontSize="13" FontFamily="Terminus (TTF)"/>
            <TextBlock Canvas.Left="270" TextWrapping="Wrap" Text="Into profile" Canvas.Top="42" RenderTransformOrigin="-0.18,0.353" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="13" FontFamily="Terminus (TTF)"/>
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Current plugins" Canvas.Top="97" RenderTransformOrigin="-0.18,0.353" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="13" FontFamily="Terminus (TTF)"/>
        </Canvas>
        <Canvas x:Name="UpdaterCanvas" Margin="233,0,0,0" Visibility="{Binding UpdaterCanvas, Mode=OneWay}">
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Updater" Canvas.Top="10" Width="387" TextAlignment="Left" FontWeight="Bold" FontSize="20"/>
            <TextBox x:Name="UpdaterLog" ScrollViewer.VerticalScrollBarVisibility="Visible" Canvas.Left="10" TextWrapping="WrapWithOverflow" Text="{Binding UpdaterLog, Mode=OneWay}" Canvas.Top="69" Height="327" Width="600" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="13" FontFamily="Terminus (TTF)" TextChanged="UpdaterLog_TextChanged"/>
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Processing updates, please wait ..." Canvas.Top="48" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="13" FontFamily="Terminus (TTF)"/>
        </Canvas>
        <TextBlock x:Name="VersionText" HorizontalAlignment="Left" Margin="63,326,0,0" TextWrapping="Wrap" Text="{Binding Version}" VerticalAlignment="Top" Width="120" TextAlignment="Center" FontSize="13" FontFamily="Terminus (TTF)"/>
    </Grid>
</Window>
