<Window x:Class="vatSysManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vatSysManager"
        mc:Ignorable="d"
        Title="vatSys Launcher" Height="450" Width="800"
        ResizeMode="NoResize">
    <Grid>
        <Image Source="/logo.jpg" Stretch="None" Margin="18,16,567,303"/>
        <Button x:Name="HomeButton" Content="Home" HorizontalAlignment="Left" Margin="24,126,0,0" VerticalAlignment="Top" Height="43" Width="198" Click="HomeButton_Click" />
        <Button x:Name="ProfilesButton" Content="Profiles" HorizontalAlignment="Left" Margin="24,174,0,0" VerticalAlignment="Top" Height="43" Width="198" Click="ProfilesButton_Click" />
        <Button x:Name="PluginsButton" IsEnabled="False" Content="Plugins" HorizontalAlignment="Left" Margin="24,222,0,0" VerticalAlignment="Top" Height="43" Width="198" />
        <Button x:Name="SetupButton" Content="Setup" HorizontalAlignment="Left" Margin="24,270,0,0" VerticalAlignment="Top" Height="43" Width="198" Click="SetupButton_Click" />
        <Canvas x:Name="InitCheckCanvas" Margin="233,0,0,0" Visibility="Hidden">
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="vatSys Launcher" Canvas.Top="10" Width="387" TextAlignment="Left" FontWeight="Bold" FontSize="20"/>
            <TextBlock Canvas.Left="90" TextWrapping="Wrap" Text="You must close vatSys to continue." Canvas.Top="123" Width="387" VerticalAlignment="Top" HorizontalAlignment="Left" TextAlignment="Center" FontWeight="Bold" FontSize="20"/>
            <Button x:Name="CloseButton" Content="Close vatSys" Height="43" Width="518" Canvas.Left="10" Canvas.Top="165" Click="VatSysCloseButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#FFED8181" />
        </Canvas>
        <Canvas x:Name="SetupCanvas" Margin="233,0,0,0" Visibility="Hidden">
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Setup" Canvas.Top="10" FontWeight="Bold" FontSize="20"/>
            <TextBox x:Name="BaseDirectoryTextBox" Canvas.Left="10" TextWrapping="Wrap" Text="" Canvas.Top="71" Width="518" Height="26"/>
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Base Directory" Canvas.Top="50"/>
            <TextBox x:Name="ProfileDirectoryTextBox" Canvas.Left="10" TextWrapping="Wrap" Text="" Canvas.Top="134" Width="518" Height="26" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Profile Directory" Canvas.Top="113" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>
        <Canvas x:Name="HomeCanvas" Margin="233,0,0,0" Visibility="Hidden">
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="vatSys Launcher" Canvas.Top="10" Width="387" TextAlignment="Left" FontWeight="Bold" FontSize="20"/>
            <TextBlock x:Name="WaitTextBlock"  Canvas.Left="79" TextWrapping="Wrap" Text="Checking for updates..." Canvas.Top="174" Width="387" VerticalAlignment="Top" HorizontalAlignment="Center" TextAlignment="Center" FontWeight="Bold" FontSize="20"/>
            <Button x:Name="LaunchButton" Content="Launch vatSys" Height="43" Width="518" Canvas.Left="10" Canvas.Top="165" Click="VatSysLaunchButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#FFA2ED81" FontWeight="Bold" />
        </Canvas>
        <Canvas x:Name="ProfilesCanvas" Margin="233,0,0,0" Visibility="Hidden">
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Profiles" Canvas.Top="10" Width="387" TextAlignment="Left" FontWeight="Bold" FontSize="20"/>
            <ListBox Name="ProfilesList" ScrollViewer.VerticalScrollBarVisibility="Visible" HorizontalAlignment="Left" Canvas.Top="42" VerticalAlignment="Center" Height="356" RenderTransformOrigin="1.591,0.524" Width="528" Canvas.Left="10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,2" Width="490">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="100" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding Title}" />
                            <TextBlock Text="{Binding LocalVersion}" Grid.Column="1" />
                            <TextBlock Text="{Binding CurrentVersion}" Grid.Column="2" />
                            <Button x:Name="Install" Visibility="Collapsed" Grid.Column="4" Content="Install" Click="UpdaterButton_Click" Tag="{Binding InstallCommand}" />
                            <Button x:Name="Update" Visibility="Collapsed" Grid.Column="3" Content="Update" Click="UpdaterButton_Click" Tag="{Binding UpdateCommand}" />
                            <Button x:Name="Delete" Visibility="Collapsed" Grid.Column="4" Content="Delete" Click="UpdaterButton_Click" Tag="{Binding DeleteCommand}" />
                        </Grid>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding UpdateAvailable}" Value="True">
                                <Setter TargetName="Update" Property="Visibility" Value="Visible" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Installed}" Value="True">
                                <Setter TargetName="Delete" Property="Visibility" Value="Visible" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Installed}" Value="False">
                                <Setter TargetName="Install" Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Canvas>
        <Canvas x:Name="UpdaterCanvas" Margin="233,0,0,0" Visibility="Visible">
            <TextBlock Canvas.Left="10" TextWrapping="Wrap" Text="Updater" Canvas.Top="10" Width="387" TextAlignment="Left" FontWeight="Bold" FontSize="20"/>
            <TextBlock x:Name="UpdaterLog" Canvas.Left="10" TextWrapping="WrapWithOverflow" Text="" Canvas.Top="50"/>

        </Canvas>
    </Grid>
</Window>
